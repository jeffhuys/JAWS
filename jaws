#!/bin/bash

get-env-var() {
	if [ -z "$2" ]; then
		echo "Usage"
	else
		# Task-def is supplied
		echo "lal"
	fi
}

get-revision() {
	if [ -z "$2" ]; then
		echo "Usage"
	else
		# Task-def is supplied
		# Generate taskdef string (if revision supplied, add it with ':')
		if [ -z "$3" ]; then
			td="$2"
		else
			td="$2:$3"
		fi

		aws ecs describe-task-definition --region eu-west-1 --task-definition $td
	fi
}


eval $1 $@
